<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/app_name"
        android:textColor="@color/dark"
        android:drawablePadding="10dp"
        android:textStyle="bold"
        android:textSize="13sp"
        app:drawableStartCompat="@drawable/ic_runner_20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark"
                android:text="From Start"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/start_distance_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/dark"
                android:text="Distance:"/>
            <TextView
                android:id="@+id/start_duration_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark"
                android:text="Duration:"/>
            <TextView
                android:id="@+id/start_speed_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark"
                android:text="Speed:"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark"
                android:text="From CP"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/cp_total_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/dark"
                android:text="CP distance:"/>
            <TextView
                android:id="@+id/cp_direct_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark"
                android:text="CP Direct dist:"/>
            <TextView
                android:id="@+id/cp_speed_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark"
                android:text="Speed:"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark"
                android:text="From WP"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/wp_total_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/dark"
                android:text="WP distance:"/>
            <TextView
                android:id="@+id/wp_direct_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark"
                android:text="WP Direct dist:"/>
            <TextView
                android:id="@+id/wp_speed_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark"
                android:text="Speed:"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/notify_stop_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_stop"
            android:layout_weight="1"
            android:text="Stop"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/notify_checkpoint_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_checkpoint"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="Check"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/notify_waypoint_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_waypoint"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="Way"/>
    </LinearLayout>
</LinearLayout>